                                  <Clock className="h-4 w-4 mr-1" />
                                  <span>{item.cookingTime || 'N/A'} min</span>
                                </div>
                              </div>
                              <div className="flex flex-wrap gap-1">
                                {item.isVeg && <Badge variant="secondary" className="text-xs bg-green-100 text-green-800">üå± Veg</Badge>}
