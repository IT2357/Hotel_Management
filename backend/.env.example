# üìÅ backend/.env - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/hotel-management
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/hotel-management

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5002
FRONTEND_URL=http://localhost:5173

# ===========================================
# JWT CONFIGURATION
# ===========================================
#node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# ENCRYPTION (REQUIRED)
# ===========================================
# Generate a 64-character hexadecimal string (32 bytes)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=64characterhexadecimalstring32byteslong

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourhotel.com
SMTP_SECURE=false

# ===========================================
# SMS CONFIGURATION (Choose one provider)
# ===========================================
SMS_PROVIDER=twilio

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Dialog SMS (Sri Lanka)
DIALOG_USERNAME=your-dialog-username
DIALOG_PASSWORD=your-dialog-password
DIALOG_API_URL=https://api.dialog.lk/sms/send

# Mobitel SMS (Sri Lanka)
MOBITEL_USERNAME=your-mobitel-username
MOBITEL_PASSWORD=your-mobitel-password
MOBITEL_API_URL=https://api.mobitel.lk/sms/send

# AWS SNS (Alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Nexmo/Vonage (Alternative)
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret

# ===========================================
# PAYMENT GATEWAY CONFIGURATION
# ===========================================
# PayHere (Sri Lanka)
PAYHERE_MERCHANT_ID=your-payhere-merchant-id
PAYHERE_MERCHANT_SECRET=your-payhere-merchant-secret
PAYHERE_API_URL=https://sandbox.payhere.lk/pay/checkout
PAYHERE_NOTIFY_URL=http://localhost:5000/api/webhooks/payhere/payment
PAYHERE_RETURN_URL=http://localhost:5173/booking/success
PAYHERE_CANCEL_URL=http://localhost:5173/booking/cancelled

# ===========================================
# SOCIAL AUTHENTICATION (Optional)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5173/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5173/auth/facebook/callback

# Apple OAuth (Optional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour-apple-private-key\n-----END PRIVATE KEY-----
APPLE_CALLBACK_URL=http://localhost:5173/auth/apple/callback

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# HOTEL INFORMATION
# ===========================================
HOTEL_NAME=Grand Hotel Colombo
HOTEL_EMAIL=info@grandhotel.com
HOTEL_PHONE=+94 11 123 4567

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to true to enable development features
ENABLE_SWAGGER=true
ENABLE_CORS=true
